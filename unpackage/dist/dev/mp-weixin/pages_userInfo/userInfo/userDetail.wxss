
.page {
	padding: 2%;
	background-image: url('https://jfzp.ykfly.com/jfht/app/gsbg.jpg');
	background-size: cover;
	background-repeat: no-repeat;
	background-attachment: fixed;
}
.head-view {
	display: flex;
	justify-content: center;
	align-items: center;
	margin-top: 25%;
}
.head-view image {
	width: 80px;
	height: 80px;
	border-radius: 50%;
}
.box {
	display: flex;
	flex-direction: column;
	margin-top: 10%;
	background-color: white;
	border-radius: 10px;
	padding: 4%;
}
.box-1 {
	display: flex;
	flex-direction: row;
	align-items: center;
}
.box-2 {
	display: flex;
	flex-direction: column;
	align-items: center;
}
.name-text {
	width: 50%;
}
.name-info {
	display: flex;
	justify-content: flex-end;
	width: 100%;
	color: gray;
	font-size: 14px;
}
.line {
	width: 100%;
	margin: 18px 0 18px 0;
	/* 设置横线的宽度为100% */
	border-bottom: 1px solid #ECEFF1;
	/* 设置横线的颜色和样式 */
}
.box1 {
	display: flex;
	flex-direction: column;
	margin-top: 4%;
	background-color: white;
	border-radius: 10px;
	padding: 4%;
}
.fly {
	width: 300rpx;
	height: 200rpx;
	border-radius: 5px;
}
.scroll-view {
	white-space: nowrap;
	width: 100%;
}
.scroll-view-item {
	display: inline-block;
	width: 45%;
	height: 200rpx;
	line-height: 300rpx;
	text-align: center;
	font-size: 36rpx;
	margin-left: 16rpx;
}

