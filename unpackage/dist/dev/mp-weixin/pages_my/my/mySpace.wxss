}
.touxiang {
	border-radius: 50%;
	height: 40px;
	width: 40px;
}
.name {
	margin-left: 6px;
}
.content {
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
	overflow: hidden;
	width: 90%;
	margin-top: 1%;
	font-size: small;
}
