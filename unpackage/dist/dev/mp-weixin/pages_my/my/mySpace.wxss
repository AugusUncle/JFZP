.info-container {
	display: flex;
	flex-direction: row;
	/* margin-top: 10%; */
	width: 100%;
}
.avatar {
	width: 80px;
	height: 80px;
	border-radius: 50%;
	position: relative;
	z-index: 2;
	/* 确保头像显示在背景之上 */
}
.back {
	position: absolute;
	top: 6%;
	width: 100%;
	/* top: -100px; */
