}
.info-qm {
	color: gray;
	font-size: 12px;
	width: 85%;
}
.info-more {
	display: flex;
	justify-content: flex-end;
	color: gray;
	width: 13%;
	font-size: 14px;
	margin-right: 2%;
}
.icon {
	color: #777;
	margin-top: 10%;
	margin-left: 2%;
}
.box {
	display: flex;
	justify-items: center;
	flex-direction: column;
	background-color: white;
	padding: 5% 2% 0 4%;
	margin-bottom: 1%;
	border-radius: 10px;
	margin-top: 5%;
	box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}
.box1 {
	display: flex;
