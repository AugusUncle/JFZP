
.page {
	padding: 2%;
	background: white;
}

/* 列表 */
.newslist {
	width: 95%;
	height: 80%;
	margin: 0 0 0 8px;
	display: flex;
	flex-direction: row;
}
.pic {
	width: 230rpx;
	height: 140rpx;
	margin: 5px 10px 10px 5px;
	position: absolute;
	right: 10px;
	border-radius: 5px;
}
.detail {
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
	overflow: hidden;
	width: 60%;
	margin: 5px 5px 5px 10px;
	font-size: small;
}
.date {
	margin: 15px 5px 5px 10px;
	color: #9E9E9E;
	font-size: small;
}
.line {
	width: 91%;
	margin: 10px 5px 5px 18px;
	/* 设置横线的宽度为100% */
	border-bottom: 1px solid #ECEFF1;
	/* 设置横线的颜色和样式 */
}

