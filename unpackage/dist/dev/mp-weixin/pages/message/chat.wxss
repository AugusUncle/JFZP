.container {
	padding: 2% 0;
	width: 98%;
	display: flex;
	align-items: center;
	background-color: white;
	margin-bottom: 1vh;
}
.inp_comm {
	padding: 1% 1% 1% 4%;
	width: 72%;
	/* flex: 80; */
	border: 1px solid #ccc;
	border-radius: 20px;
	margin: 0px 2px 10px 4px;
}
.records {
	width: 77.5%;
	height: 33px;
	line-height: 30px;
	text-align: center;
	background-color: #E7E5E4;
