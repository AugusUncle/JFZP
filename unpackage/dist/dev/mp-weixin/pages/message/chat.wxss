	height: 37px;
	flex: 13;
	margin-bottom: 10px;
}
.plus-info {
	background: #fafafa;
	display: flex;
	flex-direction: row;
	height: 100px;
	padding-bottom: 2vh;
}
.button-item {
	padding: 5%;
	text-align: center;
}
.icon {
	width: 30px;
	height: 30px;
}
.text {
	font-size: small;
	color: gray;
}
.chatImg-L {
	max-width: 100px;
	max-height: 100px;
	border-radius: 10px;
	object-fit: fill;
	margin-left: 2%;
}
.chatImg-R {
	height: 150px;
	width: 90px;
	border-radius: 10px;
	/* object-fit: fill; */
	margin-right: 2%;
}

