.job_detail {
	font-size: 18px;
	margin-top: 10%;
}
.detail {
	margin-top: 4%;
	font-size: 14px;
	line-height: 25px;
	letter-spacing: 2px;
}
.pic {
	width: 90px;
	height: 90px;
	border-radius: 50%;
}
.info {
	margin-top: 1%;
	font-size: 14px;
}
.map {
	height: 30%;
	border-radius: 10px;
	margin-top: 4%;
}
.btn {
	margin-top: 4%;
}
.company {
	font-size: 26px;
	width: 100%;
}
button {
	border: none;
	width: 100%;
	height: 100%;
	margin: 0;
	font-size: 30rpx;
	color: white;
	background: #38BDF8;
	line-height: 3;
}
button::after {
	border: none;
	border-radius: 0;
}
.scroll-view {
	white-space: nowrap;
	width: 100%;
}
.scroll-view-item {
	display: inline-block;
	width: 45%;
	height: 200rpx;
	line-height: 300rpx;
	text-align: center;
	font-size: 36rpx;
}
.fly {
	width: 300rpx;
	height: 200rpx;
	border-radius: 5px;
}
.back {
	width: 100%;
	margin-top: 15%;
}
.icon {
	color: #777;
	margin-top: 10%;
	margin-left: 2%;
}

