}
.list {
	background-color: #F7F7F7;
}
.empty{
	display: flex;
	color: grey;
	align-items: center;
	flex-direction: column;
	font-size: 14px;
	padding-bottom: 80%;
}
.empty image{
	width: 60px;
	height: 60px;
	margin-top: 50%;
	margin-bottom: 10px;
}

